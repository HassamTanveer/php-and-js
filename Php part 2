connect_error) { die("Connection failed: " . $conn->connect_error); } // Create database $sql = "CREATE DATABASE myproject_database"; if ($conn->query($sql) === TRUE) { echo "Database created successfully"; } else { echo "Error creating database: " . $conn->error; } // sql to create table $link = mysqli_connect("localhost", "root", "", "myproject_database"); // Check connection if($link === false){ die("ERROR: Could not connect. " . mysqli_connect_error()); } // Attempt create table query execution $sql = "CREATE TABLE persons( id INT NOT NULL PRIMARY KEY AUTO_INCREMENT, company_name VARCHAR(30) NOT NULL, req_1 VARCHAR(30) NOT NULL, req_2 VARCHAR(70) NOT NULL )"; if(mysqli_query($link, $sql)){ echo "Table created successfully."; } else{ echo "ERROR: Could not able to execute $sql. " . mysqli_error($link); } // Close connection if($link === false){ die("ERROR: Could not connect. " . mysqli_connect_error()); } // Attempt insert query execution $sql = "INSERT INTO persons (company_name, req_1, req_2) VALUES('Company A', 'property insurance', 'apartment or house'), ('Company B', '5 door car or 4 door car', 'driver's license also car insurance'), ('Company C', ' social security num', ' work permit'), ('Company D', 'apartment \ a flat \ a house', ' '), ('Company E', 'driver's license and a 2 door car or a 3 door car or a 4 door car or a 5 door car', ' '), ('Company F', 'scooter or a bike, or a motorcycle and a driver's license also motorcycle insurance', ' '), ('Company G', 'requires a massage qualification certificate also a liability insurance', ' '), ('Company H', 'requires a storage place \ a garage', ' '), ('Company I', 'doesn't require anything', 'you can come and start working immediately'), ('Company J', 'requires a PayPal account', ' '), ('Company K', 'bike', 'driving license'), ('Company L', 'social security num', 'paypal'), ('Company M', 'car insurance', 'work permit'), ('Company N', 'health insurance', 'age limit 23'), ('Company O', 'local citizen', '4 door ca